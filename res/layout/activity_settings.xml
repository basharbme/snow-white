<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
    
    <LinearLayout
        android:id="@+id/settings_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
       	android:paddingBottom="10dp"
	   	android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="10dp">
        
        <ImageButton
			android:id="@+id/button_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="backToMain"
			android:src="@drawable/ic_back"
			android:background="#ffffff"
			android:paddingRight="10dp"/>
    
	    <TextView
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/title_setting"
	    	android:textSize="40sp"/>
    
    </LinearLayout>

<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
        
        
        <RelativeLayout 
         	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_margin="20dp">
            
		        <TextView
		            android:id="@+id/setting_ff_title"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentTop="true"
			        android:text="Show facial features"
			        android:textSize="20sp"/>
		        
		        <TextView
		            android:id="@+id/setting_ff_desc"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Show captured image with facial features as drawn dots on the image"
			        android:layout_below="@id/setting_ff_title"
		        	android:layout_alignParentLeft="true"
		       		/>
		        
		        <CheckBox
		            android:id="@+id/setting_ff_check"
		            android:checked="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="20dp"
		            android:layout_below="@id/setting_ff_title"
		       		android:layout_alignParentRight="true"
		       		android:layout_centerVertical="true"/>    
        </RelativeLayout>
        
        
        
        
                
        <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="@android:color/darker_gray"/>
        
        
        
        
        
                <RelativeLayout 
         	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_margin="20dp">
            
		        <TextView
		            android:id="@+id/setting_imgSize_title"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentTop="true"
			        android:text="Image size"
			        android:textSize="20sp"/>
		        
		        <TextView
		            android:id="@+id/setting_imgSize_desc"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Choose the right image size for your phone. Warning: large images need a lot of memory and could force the app to crash."
			        android:layout_below="@id/setting_imgSize_title"
		        	android:layout_alignParentLeft="true"
		       		android:layout_toLeftOf="@+id/setting_imgSize_spinner"/>
		        
		        <Spinner
				    android:id="@+id/setting_imgSize_spinner"
				    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="20dp"
		            android:layout_below="@id/setting_imgSize_title"
		       		android:layout_alignParentRight="true"
		       		android:layout_centerVertical="true"/>
 
        </RelativeLayout>
        
                
                
                
                
                
        <View
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:background="@android:color/darker_gray"/>
        
        
        
        

        
        <RelativeLayout 
         	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingBottom="20dp"
			android:paddingTop="20dp">
            
		        <TextView
		            android:id="@+id/setting_info"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentTop="true"
			        android:text="Info"
			        android:textSize="20sp"/>

        </RelativeLayout>
        
        
    			

	</LinearLayout>
</ScrollView>
</LinearLayout>